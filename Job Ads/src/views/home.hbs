<main>

    <section id="home-page">
        <article class="home-page-content">
            <h1>Find The Job That Fits Your Life</h1>
            <p>On this site, you can find hundreds of job offers, do not hesitate, and apply now.</p>
            <a href="/all-ads" class="view-all-ads">View all ads</a>
        </article>
        <article class="home-page-image">
            <!-- Do not forget to change the path to the image -->
            <img src="/img/man.png" alt="man">
        </article>
    </section>

    <section class="intro">
        <article class="intro-left-side">
            <article class="intro-left-side-image">
                <!-- Do not forget to change the path to the image -->
                <img src="/img/people-group.png" alt="people">
            </article>
            <article class="intro-left-side-text">
                <h1>You're Looking for Trending Jobs!</h1>
                <h2>See the first three ads you applied for.</h2>
            </article>
        </article>

        <article class="intro-symbol">
            <!-- Do not forget to change the path to the image -->
            <img src="/img/strip-square.png" alt="strip-square">
        </article>

        {{#if ads}}
        {{#each ads}}
        {{>home}}
        {{/each}}

        {{else}}
        <!--If not show:-->
        <p class="no-ads-created">No ads created!</p>
        {{/if}}



        </article>
    </section>
