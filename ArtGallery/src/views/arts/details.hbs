<main>
    <section id="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{art.title}}</h2>
                <h3>Author: {{art.author}}</h3>
                <h3>Painting technique: {{art.paintingtechnique}}</h3>
                <h3>Certificate of authenticity: {{art.certificate}}</h3>


                <!-- If there is no registered user, do not display buttons-->
                {{#if isAuthenticated}}
                <div class="buttons">
                    <!-- Only for registered user and author of the publication -->
                    {{#if isOwner}}
                    <a href="/arts/{{art._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/arts/{{art._id}}/delete" class="btn-delete">Delete</a>
                    {{else if isShared}}
                    <!-- logged in user who has already shared the publication-->
                    <p class="shared-pub">You already shared this publication</p>
                    {{else}}
                    <!-- logged in user who has not yet shared the publication-->
                    <a href="/arts/{{art._id}}/usersShared" class="btn-share">Share publication</a>
                    {{/if}}

                </div>
                {{/if}}
            </article>

            <article class="details-card-image">
                <img src="{{art.image}}" alt="art-image2">
            </article>

        </article>
    </section>
</main>