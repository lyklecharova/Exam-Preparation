<main>
    <section id="edit-container">
        <div class="edit-container-info">
            <!-- Do not forget to change the path to the image -->
            <img src="/img/blog-img12.jpg" alt="image">

            <form  method="POST" class="container-text">
                <h2>Edit</h2>
                <p>Edit your masterpiece!</p>

                <label for="title">Title:</label>
                <input type="text" id="title" name="title" value="{{art.title}}">

                <label for="painting-tech">Painting technique:</label>
                <input type="text" id="painting-tech" name="paintingtechnique" value="{{art.paintingtechnique}}">

                <label for="picture">Art picture:</label>
                <input type="text" id="picture" name="image" value="{{art.image}}">

                <label for="certificate">Certificate of authenticity:</label>
                <input type="text" id="certificate" name="certificate" value="{{art.certificate}}">

                <button class="edit-btn">Edit</button>
            </form>

        </div>
    </section>
</main>