<main>
    <section id="profile-page">
        <h1>Full Profile Information</h1>
        <article class="profile-card">

            <article class="profile-card-info">
                <h2>Username: {{user.username}}</h2>
                <h3>Address: {{user.address}}</h3>
                {{#if sharedPublications}}
                <h4>Titles of shared posts by the user: {{sharedPublications}}</h4>
                {{else}}
                <h4>Titles of shared posts by the user: Not yet.</h4>
                {{/if}}

                {{#if createdPublications}}
                <h4>Titles of which the user is the author: {{createdPublications}}</h4>
                {{else}}
                <h4>Titles of which the user is the author: Not yet.</h4>
                {{/if}}

            </article>

            <article class="profile-card-icon">
                <!-- Do not forget to change the path to the image -->
                <img src="/img/vip-user.png" alt="art-image1">
            </article>

        </article>
    </section>
</main>